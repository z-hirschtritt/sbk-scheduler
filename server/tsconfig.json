{
  "include": ["src/**/*", "config"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "compilerOptions": {
    "declaration": false,
    "baseUrl": ".",
    "paths": {"*": ["types/*"]},
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["esnext"],
    "types": ["mocha", "node"]
  }
}
